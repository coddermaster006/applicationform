<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="5dp"
    android:background="@drawable/b"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:layout_margin="5dp"
        android:text="Application Form"
        android:textSize="20dp"
        android:textColor="#000000"
        android:background="#A6A026"
        android:gravity="center"/>

    <EditText
        android:id="@+id/etname"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="NAME"
        android:layout_margin="5dp"/>

    <EditText
        android:id="@+id/etemail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress"
        android:hint="email id (abc@example.com)"
        android:layout_margin="5dp"/>

    <EditText
        android:id="@+id/etcode"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Country code"
        android:inputType="number"
        android:layout_margin="5dp"/>

    <EditText
        android:id="@+id/etmobile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Mobile no."
        android:inputType="number"
        android:layout_margin="5dp"/>

    <RadioGroup
        android:id="@+id/radiogroup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Male"/>

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Female"/>

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Prefer Not To Say"/>
    </RadioGroup>

    <EditText
        android:id="@+id/etcountry"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Country"
        android:inputType="text"
        android:layout_margin="5dp"/>

    <EditText
        android:id="@+id/etzipcode"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Zip code"
        android:inputType="phone"
        android:layout_margin="5dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:textSize="17dp"
        android:text="By clicking on Proceed, you agree to our terms of services"/>

    <Button
        android:id="@+id/btnproceed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Proceed"
        android:layout_gravity="center"/>

    <TextView
        android:id="@+id/textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Recheck thr Name"
        android:layout_margin="5dp"/>

    <TextView
        android:id="@+id/textview1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Recheck the Email Id"
        android:layout_margin="5dp"/>

    <TextView
        android:id="@+id/textview2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Recheck the Mobile no."
        android:layout_margin="5dp"/>

</LinearLayout>